{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="row mb-3">
        <h1 class="text-center">{{ post.title }}</h1>
    </div>
    <div class="row mb-3">
        <div class="col-6 offset-3">
            <p class="text-justify">
                {{ post.content }}
            </p>
        </div>
    </div>
    <div class="row mb-3">
        <small>Written by {{ post.author }} at {{ post.createdAt|date('d/m/y H:i') }}</small>
    </div>
    <hr>
    <div class="row mb-3">
        <h2>Comments</h2>
        <ul class="list-group list-group-flush mb-5">
            {% for comment in post.comments %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ comment.content }}
                    <span class="badge bg-primary rounded-pill">{{ comment.createdAt|date('d/m/y H:i') }}</span>
                </li>
            {% else %}
                No comment have been posted yet. Be the first!
            {% endfor %}
        </ul>
        <hr>
        <h2>Publish a comment</h2>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
